{{#each this}}
{{#if watched}}
  <div class='col-xs-3 row-centered movie'>
    <a href='#'>
      <div class='thumbnail' data-toggle="tooltip" data-placement="bottom" title="{{Title}}">
        <img src='{{Poster}}' alt='{{Title}}'>
        <div class='caption'>
          <form class="form-inline">
            <div class="form-group">
              <label for="Rating">Rating: </label>
              <input  type='hidden' class='myRating' data-start="0" data-stop="5" value={{rating}}>
            </div>
          </form>
        </div>
      </div>
    </a>
  </div>
{{/if}}
{{/each}}

